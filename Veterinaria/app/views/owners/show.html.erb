<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @owner.name %>
</p>

<p>
  <b>Email:</b>
  <%= @owner.email %>
</p>

<p>
  <b>Address:</b>
  <%= @owner.address %>
</p>

<p>
  <b>Phone:</b>
  <%= @owner.phone %>
</p>

<p>
  <b>Cellphone:</b>
  <%= @owner.cellphone %>
</p>

<table>
	<% @owner.patients.each do |patient| %>
		<tr>
			<td><b>Patient Name:</b></td>
			<td><%= patient.name  %></td>
		</tr>
	
	<% end %>
</table>

<table>
	<% @owner.notes.each do |note| %>
		<tr>
			<td><b>Note:</b></td>
			<td><%= note.description  %></td>
		</tr>
	
	<% end %>
</table>

<%= link_to 'Add Patient', add_patient_owner_path(@owner) %>
<%= link_to 'Add Note', add_note_owner_path(@owner) %>
<%= link_to 'Edit', edit_owner_path(@owner) %> |
<%= link_to 'Back', owners_path %>
